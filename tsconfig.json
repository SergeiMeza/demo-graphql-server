    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*"]
}
